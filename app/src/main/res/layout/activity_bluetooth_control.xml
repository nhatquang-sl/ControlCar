<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".BluetoothControlActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/leftUpBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="@string/arrow_down"
            android:src="@drawable/baseline_arrow_upward_black_48dp" />

        <ImageButton
            android:id="@+id/leftDownBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:contentDescription="@string/arrow_left"
            android:src="@drawable/baseline_arrow_downward_black_48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/rightUpBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:contentDescription="@string/arrow_left"
            android:src="@drawable/baseline_arrow_upward_black_48dp" />

        <ImageButton
            android:id="@+id/rightDownBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:contentDescription="@string/arrow_right"
            android:src="@drawable/baseline_arrow_downward_black_48dp" />
    </LinearLayout>

</LinearLayout>